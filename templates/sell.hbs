<!-- hero -->
<div class="flx-hero flx-hero--smaller dflex items-center">
	<div class="flx-hero__bg">
		<div class="a a-fi">
			<div class="full-absolute gd-r30-50-yellow"></div>
			<div class="flx-hero__img flx-hero__img--sell-{{sell.hero.img}} hidden-xs"></div>
		</div>
		<div class="flx-hero__flow-smaller" include="../media/flow/flow-white.svg"></div>
	</div>
	
	<!-- sell box -->
	<div class="flx-sell-box__hero-container">
		<div class="container ovr-container a a-fi-up-s a-del-500">
			<div class="flx-sell-box__hero-grid">
				<div></div>
				<div class="flx-sell-box">
					<div class="flx-sell-box__header">
						<h1 class="headingXL ma-0"><b>{{global.title}}</b></h1>
						<h2 class="headingXL ma-0">{{sell.price}}<span class="flx-sell-box__unit">{{sell.unit}}</span></h2>
					</div>
					<div class="divider mb-4"></div>
					<p class="flx-sell-box__description mb-4">{{{tell.cta.description}}}</p>
					<div class="flx-cta__usp-grid flx-cta__usp-grid--left">
						{{#each tell.cta.usps}}
						<div class="flx-cta__usp flx-cta__usp--left grey-4">
							<span class="flx-cta__icon" include="../assets/img/icons/check-round--small.svg"></span>
							<span>{{{usp}}}</span>
						</div>
						{{/each}}
					</div>
					<a href="{{global.cta.url}}" class="button btn--fw">
						{{{global.cta.button}}}
					</a>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- usps -->
<div class="flx-section__container a a-fi a-del-800">
	<div class="container ovr-container">
		<div class="flx-sell-usps">
			{{#each sell.usps.item}}
			<div class="flx-section">
				<div class="flx-sell-usps__item">
					<div class="flx-sell-usps__icon {{#unless @first}} tr-stag js-tr {{/unless}}" include="../media/icons/{{icon}}.svg"></div>
					<h3 class="flx-section__subtitle {{#unless @first}} tr-stag js-tr {{/unless}}"><b>{{title}}</b></h3>
					<p class="f-grey-4 ma-0 {{#unless @first}} tr-stag js-tr {{/unless}}">{{description}}</p>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
</div>

<!-- chipcards -->
<div class="flx-section a a-fi a-del-1200">
	<div class="flx-section__container pt-0">
		<div class="container ovr-container">
			<div class="g g-2-md items-center">
				<div class="flx-section__img flx-section__img--100 order-3-md tr-si tr-500 js-tr">
					<img src="../media/{{sell.chipcards.img}}" class="w-100" />
				</div>		
				<div class="flx-section__content">
					<h3 class="flx-section__title mb-4 tr-stag js-tr">
						<b>{{{sell.chipcards.heading}}}</b>
					</h3>
					{{#each sell.chipcards.item}}
					<div class="flx-section__paragraph">
						<h4 class="flx-section__subtitle tr-stag js-tr"><b>{{{title}}}</b></h4>
						<p class="flx-section__description ma-0 tr-stag js-tr">{{{description}}}</p>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>

<!-- alles staat voor je klaar -->
<div class="flx-section">
	<div class="flx-costs gd-110-grey">
		<div class="container ovr-container">
			<div class="g g-2-sm">	
				<div class="flx-costs__content order-3-sm">
					<h3 class="flx-section__content-item flx-section__title tr-stag js-tr">
						<b>{{{sell.costs.heading}}}</b>
					</h3>
					<p class="flx-section__content-item flx-section__description tr-stag js-tr">
						{{{sell.costs.description}}}
					</p>
				</div>
				<div class="flx-section__img flx-section__img--clip tr-si tr-500 js-tr">
					<img src="../media/{{tell.costs.img}}" class="w-100" />
				</div>
			</div>
		</div>
	</div>
</div>

<!-- call to action -->
<div class="flx-section">
	<div class="flx-section__container gd-110-yellow">
		<div class="flx-section__content flx-section__content--mw-800 txt-c">
			<h3 class="flx-section__title tr-stag js-tr">
				{{{tell.cta.heading}}}
			</h3>
			<p class="flx-section__description flx-section__content--mw-800 txt-c tr-stag js-tr">
				{{{tell.cta.description}}}
			</p>
			<div class="tr-stag js-tr mb-2">
				<a href="{{global.cta.url}}" class="button">
					{{{global.cta.button}}}
				</a>
			</div>
			<div class="tr-stag js-tr">
				<a href="/" class="flx-link">{{abos.cta.link}}</a>
			</div>
		</div>
	</div>
</div>