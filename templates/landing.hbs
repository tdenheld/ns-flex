<!------- background images ------->
<div class="flx-bg--fixed">
	<div class="flx-gradient flx-gradient--light-grey alpha-1"></div>
	<div class="flx-gradient flx-gradient--cerulean js-bg-2"></div>
	<div class="flx-gradient flx-gradient--yellow js-bg-3"></div>
	<div class="flx-bg flx-bg--absolute flx-bg--white js-bg-5"></div>
</div>

<!------- hero ------->
<div class="flx-hero">
	<div class="flx-hero__bg">
		<div class="ani ani--fade-in">
			<div class="flx-gradient flx-gradient--yellow alpha-1"></div>
			<div class="flx-hero__img"></div>
		</div>
		<div class="flx-hero__flow" include="../media/flow-white.svg"></div>
	</div>
	<div class="ani ani--fade-in-up-small ani--delay-500">
		<div class="container ovr-container">
			<div class="flx-hero__content">
				<h1 class="flx-hero__title">{{hero.title}}</h1> 
				<h2 class="flx-hero__subtitle">{{hero.subtitle}}</h2>
				<a href="https://ns.nl/nsflex/webshop" class="button flx-button--blue">
					{{{button-cta-text}}}
				</a>
			</div>
		</div>
	</div>
</div>	
<div class="js-scroll-down tr-750">
	<div class="flx-hero__scrolldown ani ani--fade-in ani--delay-1250">
		<div class="scroll-down scroll-down--blue">
			<div class="scroll-down__icon">
				<div class="scroll-down__icon-circle"></div>
			</div>
		</div>
	</div>
</div>
		
<!-- big fat usps with gradient transitions -->
{{#each section}}	
<div class="flx-section flx-section--usps">
	<div class="container ovr-container">
		<div class="flx-grid flx-grid--1-1 flx-grid--align-center">
			<div class="flx-section__img flx-grid__{{order}} tr tr-500 tr--scale-in">
				{{#if img}}<img src="../media/{{img}}" class="img-responsive" />{{/if}}
			</div>
			<div class="flx-section__content">
				<h3 class="flx-section__content-item flx-section__title tr tr-stag">{{{title}}}</h3>
				{{#if description}}
				<p class="flx-section__content-item flx-section__description tr tr-stag">{{{description}}}</p>	
				{{/if}}		
			</div>
		</div>
	</div>
</div>
{{/each}}

<!-- al het OV -->
<div class="flx-section">
	<div class="flx-ov__bg tr tr-500 tr--fade-in"></div>
	<div class="flx-section__container flx-section__container--large">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--2-3">
				<div></div>		
				<div class="flx-section__content tr tr-stag">
					<div class="flx-ov__text-container">
						<h3 class="flx-section__content-item flx-section__title tr tr-stag">
							<b>{{ov.heading}}</b>
						</h3>
						<p class="flx-section__content-item flx-section__description tr tr-stag">
							{{ov.description}}
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- inzicht kosten -->
<div class="flx-section">
	<div class="flx-costs flx-gradient--grey">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--1-1-sm">		
				<div class="flx-costs__content">
					<h3 class="flx-section__content-item flx-section__title tr tr-stag">
						<b>{{costs.heading}}</b>
					</h3>
					<p class="flx-section__content-item flx-section__description tr tr-stag">
						{{costs.description}}
					</p>
				</div>
				<div class="flx-costs__img tr tr-500 tr--scale-in">
					<img src="../media/{{costs.img}}" class="img-responsive" />
				</div>
			</div>
		</div>
	</div>
</div>

<!-- 1e klas switch -->
<div class="flx-section">
	<div class="flx-section__container flx-bg--white">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--1-1 flx-grid--align-center">
				<div class="flx-section__img flx-section__img--100 tr tr-500 tr--scale-in">
					<img src="../media/{{first-class.img}}" class="img-responsive" />
				</div>		
				<div class="flx-section__content">
					<h3 class="flx-section__title tr tr-stag">
						<b>{{{first-class.heading}}}</b>
					</h3>
					<p class="flx-section__description tr tr-stag">
						{{{first-class.description}}}
					</p>
					<div class="tr tr-stag js-more">
						<div class="btn-more js-more-btn">
							<span include="../assets/img/icons/plus--small.svg"></span>
							{{{first-class.button}}}
						</div>
						<ol class="flx-section__description flx-section__ol flx-more js-more-content">
							{{#each first-class.list}}
								<li>{{{item}}}</li>
							{{/each}}
						</ol>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- abonnementen -->
<div class="flx-section">
	<div class="flx-section__container flx-section__container--no-padding-top flx-bg--white">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--1-1 flx-grid--align-center">
				<div class="flx-section__img flx-section__img--100 flx-grid__reverse tr tr-500 tr--scale-in">
					<img src="../media/{{abo.img}}" class="img-responsive" />
				</div>			
				<div class="flx-section__content">
					<h3 class="flx-section__title tr tr-stag"><b>{{{abo.heading}}}</b></h3>
					<p class="flx-section__description tr tr-stag">{{{abo.description}}}</p>
					<div class="tr tr-stag">
						<a href="/abos.html" class="button flx-button flx-button--ghost">
							{{{abo.more}}}
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- summary -->
<div class="flx-section">
	<div class="flx-section__container flx-section__container--small flx-gradient--grey">
		<div class="container ovr-container">
			<div class="flx-summary">
				{{#each summary}}
				<div class="flx-summary__item tr tr-stag">
					<div class="flx-summary__icon" include="../media/{{icon}}.svg"></div>
					<h3 class="flx-summary__title">{{title}}</h3>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>

<!-- call to action -->
<div class="flx-section">
	<div class="flx-section__container flx-gradient--yellow">
		<div class="container ovr-container">
			<div class="flx-section__content flx-section__content--mw-800 txt-center">
				<h3 class="flx-section__title tr tr-stag">{{{cta.heading}}}</h3>
				<p class="flx-cta__description tr tr-stag">{{{cta.description}}}</p>
				<div class="tr tr-stag">
					<a href="https://ns.nl/nsflex/webshop" class="button flx-button--blue">
						{{{button-cta-text}}}
					</a>
				</div>
				<div class="flx-cta__usp-grid">
					{{#each cta.usps}}
					<div class="flx-cta__usp tr tr-stag">
						<span class="flx-cta__icon" include="../assets/img/icons/check-round--small.svg"></span>
						<span>{{{usp}}}</span>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>

<!-- testimonial -->
<div class="flx-section">
	<div class="flx-section__container flx-section__container--small flx-gradient--grey">
		<div class="container ovr-container">
			<div class="flx-section__content flx-testimonial__content">
				<div class="flx-grid flx-grid--align-center flx-grid--max-1 flx-grid--double-col-gap flx-grid--row-gap">
					<div class="flx-testimonial__img tr tr-500 tr--scale-in"></div>
					<div class="flx-testimonial__text">
						<h3 class="headingM spacer-margin-2 tr tr-stag">{{{testimonial.sender}}}</h3>
						<p class="flx-testimonial__quote tr tr-stag">{{{testimonial.quote}}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- faq -->
<div class="flx-section">
	<div class="flx-section__container divider">
		<div class="container ovr-container">
			<div class="flx-section__content">
				<h3 class="flx-section__title">{{faq.heading}}</h3>
				<ul class="list collapsibleList is-collapsible">
					{{#each faq.questions}}
					<li class="collapsibleList__item ovr-collapsibleList__item">
						<h3 class="collapsibleList__header" id="keuzedagen" tabindex="0" aria-expanded="false" role="button">{{{question}}}</h3>   
					</li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>