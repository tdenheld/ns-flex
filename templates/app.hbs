<div class="flx-hero flx-hero__size">
	<div class="ani ani--fade-in">
		<div class="flx-hero__img"></div>
		<div class="flx-gradient flx-gradient--vivid-blue"></div>
		<div class="flx-gradient flx-gradient--cobalt-blue"></div>
	</div>
	<div class="flx-hero__flow" include="../media/flow.svg"></div>
	
	<!-- background images for intro -->
	<div class="flx-gradient flx-gradient--cerulean js-bg-0 hidden-xs hidden-sm"></div>
	<div class="flx-gradient flx-gradient--light-grey js-bg-1 hidden-xs hidden-sm"></div>
	
	<div class="ani ani--fade-in-up-small ani--delay-500">
		<div class="js-parallax--back flx-hero__size">
			<div class="container ovr-container">
				<div class="flx-hero__content js-hero-content tr-750">
					<h1 class="flx-hero__title">{{hero.title}}</h1> 
					<h2 class="flx-hero__subtitle">{{hero.subtitle}}</h2>
					<button class="button button--nsYellow flx-hero__button js-hero-scroll-down hidden-xs">
						{{hero.button}}
					</button>
				</div>
			</div>
		</div>
	</div>
	<div class="ani ani--fade-in ani--delay-1250">
		<div class="btn-round btn-round--down tr-500 js-hero-scroll-down js-hero-scroll-down--round">
			<div include="../assets/img/icons/chevron-m--small.svg"></div>
		</div>
	</div>
</div>

<div class="js-parallax--front">
	<!-- background images for sections below intro - first one is needed for mobile cause thats not parallax -->
	<div class="flx-gradient flx-gradient--cerulean js-bg-0 hidden-md hidden-lg"></div>
	<div class="flx-gradient flx-gradient--light-grey js-bg-1 hidden-md hidden-lg"></div>
	<div class="flx-gradient flx-gradient--yellow js-bg-2"></div>
	<div class="flx-gradient flx-gradient--light-grey js-bg-3"></div>
	
	<!-- big fat usps with gradient transitions -->
	{{#each section}}	
	<div class="flx-section" id="flx-s{{@index}}">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--{{grid}}">
				<div class="flx-section__img flx-section__img--{{img-class}} flx-grid__{{order}} tr tr-750 tr--scale-in">
					{{#if img}}<img src="../media/{{img}}" class="img-responsive" />{{/if}}
				</div>
				<div class="flx-section__content flx-section__content--{{text-modifier}}">
					<h3 class="flx-section__title tr tr-stag">{{{title}}}</h3>
					{{#if spacer}}<div class="spacer-margin-4"></div>{{/if}}
					<p class="flx-section__description tr tr-stag">{{{description}}}</p>
					{{#if label}}<p class="flx-section__label tr tr-stag">{{{label}}}</p>{{/if}}
					{{#if button}}
					<div class="tr tr-stag">
						<button class="button {{button-class}}">{{{button}}}</button>
					</div>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	{{/each}}
	
	<div class="flx-section flx-section--last" id="flx-s3">
		<div class="flx-ov tr tr-1000 tr--fade-in">
			<div class="container ovr-container">
				<div class="flx-grid flx-grid--1-1">
					<div></div>		
					<div class="flx-section__content tr tr-stag">
						<div class="flx-ov__text">
							<h3 class="headingL tr tr-stag"><b>In al het openbaar vervoer</b></h3>
							<p class="no-margin font-blue headingXS tr tr-stag">
								NS Flex werkt in het hele OV in Nederland. Je kunt ermee betalen in trein, metro, tram en bus.
								Ga je graag met de fiets? Pak overal in Nederland een OV-fiets of maak gebruik van een bewaakte stalling.</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		
		<!-- abonnementen usps -->
		<div class="flx-abo tr tr-1000 tr--fade-in">
			<div class="container ovr-container">			
				<div class="flx-section__content">
					<h3 class="headingXXL spacer-margin-4">
						{{abo.heading}}
					</h3>
					<div class="flx-grid flx-grid--1-1 flx-grid--align-start flx-grid--double-row-gap">
					{{#each abo.usps}}				
						<div class="flx-abo__tile">
							<div class="flx-abo__icon" include="../assets/img/icons/{{icon}}.svg"></div>
							<h3 class="headingM"><b>{{title}}</b></h3>
							<p>{{description}}</p>
							{{#if link}}<a class="arrowLink">{{link}}</a>{{/if}}
						</div>
					{{/each}}
					</div>
				</div>
			</div>
		</div>
		
		<!-- call to action -->
		<div class="flx-cta tr tr-1000 tr--fade-in">
			<div class="container ovr-container">
				<div class="flx-section__content flx-section__content--center-md-lg">
					<h3 class="headingXXL flx-cta__title tr tr-stag">{{{cta.heading}}}</h3>
					<h4 class="headingL">{{{cta.subhead}}}</h4>
					<p class="font-blue">{{{cta.description}}}</p>
					<button class="button button--arrowRight">{{{cta.button}}}</button>
				</div>
			</div>
		</div>
		
		<!-- testimonial -->
		<div class="flx-testimonial flx-gradient--ns-blue tr tr-1000 tr--fade-in">
			<div class="container ovr-container">
				<div class="flx-section__content flx-testimonial__content">
					<div class="flx-grid flx-grid--max-1 flx-grid--double-col-gap flx-grid--row-gap">
						<div class="flx-testimonial__img"></div>
						<div class="flx-textimonial__text">
							<div class="flx-testimonial__icon hidden-xs hidden-sm" include="../assets/img/icons/quote--large.svg"></div>
							<h3 class="flx-testimonial__quote">{{{testimonial.quote}}}</h3>
							<p class="flx-testimonial__sender">{{{testimonial.sender}}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	
