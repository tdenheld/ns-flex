<div class="flx-hero flx-hero__size">
	<div class="ani ani--fade-in">
		<div class="flx-hero__img"></div>
		<div class="flx-gradient flx-gradient--light-blue-1"></div>
		<div class="flx-gradient flx-gradient--blue-top"></div>
	</div>
	<div class="flx-hero__flow" include="../media/flow.svg"></div>
	
	<!-- background images for intro -->
	<div class="flx-gradient flx-gradient--light-blue-2 js-bg-0 alpha-0 tr-1000 hidden-xs hidden-sm"></div>
	<div class="flx-gradient flx-gradient--grey js-bg-1 alpha-0 tr-1000 hidden-xs hidden-sm"></div>
	
	<div class="ani ani--fade-in-up-small ani--delay-500">
		<div class="js-parallax--back flx-hero__size">
			<div class="container ovr-container">
				<div class="flx-hero__content js-hero-content tr-750">
					<h1 class="flx-hero__title">{{hero.title}}</h1> 
					<h2 class="flx-hero__subtitle">{{hero.subtitle}}</h2>
					<button class="button button--nsYellow flx-hero__button js-hero-scroll-down hidden-xs">
						{{hero.button}}
					</button>
				</div>
			</div>
		</div>
	</div>
	<div class="ani ani--fade-in ani--delay-1250">
		<div class="btn-round btn-round--down tr-500 js-hero-scroll-down js-hero-scroll-down--round">
			<div include="../assets/img/icons/chevron-m--small.svg"></div>
		</div>
	</div>
</div>	
<div class="js-parallax--front">
	<!-- background images for sections below intro - first one is needed for mobile cause thats not parallax -->
	<div class="flx-gradient flx-gradient--light-blue-2 js-bg-0 alpha-0 tr-1000 hidden-md hidden-lg"></div>
	<div class="flx-gradient flx-gradient--grey alpha-0 js-bg-1 tr-1000 hidden-md hidden-lg"></div>
	<div class="flx-gradient flx-gradient--turquoise js-bg-2 alpha-0 tr-1000"></div>
	<div class="flx-gradient flx-gradient--yellow js-bg-3 alpha-0 tr-1000"></div>
	<div class="flx-bg__container-fixed">
		<div class="flx-bg flx-bg--1eklas js-bg-4 alpha-0 tr-1000"></div>
	</div>
	<div class="flx-gradient flx-gradient--grey js-bg-5 alpha-0 tr-1000"></div>
	
	{{#each section}}	
	<div class="flx-section flx-section--{{@index}}" id="flx-s{{@index}}">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--{{grid}}">
				<div class="flx-section__img flx-section__img--{{img-class}} flx-grid__{{order}} tr tr-750 tr--scale-in">
					{{#if img}}<img src="../media/{{img}}" class="img-responsive" />{{/if}}
				</div>
				<div class="flx-section__content flx-section__content--{{text-modifier}}">
					<h3 class="flx-section__title tr tr-stag">
						{{{title}}}
					</h3>
					{{#if spacer}}
					<div class="spacer-margin-4"></div>
					{{/if}}
					<p class="flx-section__description tr tr-stag">
						{{{description}}}
					</p>
					{{#if label}}
					<p class="flx-section__label tr tr-stag">
						{{{label}}}
					</p>
					{{/if}}
					{{#if button}}
					<div class="tr tr-stag">
						<button class="button {{button-class}}">
							{{{button}}}
						</button>
					</div>
					{{/if}}
				</div>
			</div>
		</div>
	</div>
	{{/each}}
	
