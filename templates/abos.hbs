<!------- hero ------->
<div class="flx-hero flx-hero--abo">
	<div class="flx-hero__bg">
		<div class="ani ani--fade-in">
			<div class="flx-hero__img"></div>
		</div>
		<div class="flx-hero__flow" include="../media/flow-white.svg"></div>
	</div>
	<div class="ani ani--fade-in-up-small ani--delay-500">
		<div class="container ovr-container">
			<div class="flx-hero__content">
				<h1 class="flx-hero__title">{{title}}</h1> 
				<h2 class="flx-hero__subtitle">{{subtitle}}</h2>
				<button class="button flx-button--blue">
					{{button-cta}}
				</button>
			</div>
		</div>
	</div>
</div>

<!-- intro -->
<div class="flx-section flx-section--usps flx-gradient--light-grey ani ani--fade-in ani--delay-750" id="flx-s0">
	<div class="container ovr-container">
		<div class="flx-grid flx-grid--1-1 flx-grid--align-center">
			<div class="flx-section__img tr tr-500 tr--scale-in">
				<img src="../media/{{usp.icon}}" class="img-responsive" />
			</div>
			<div class="flx-section__content">
				<h3 class="flx-section__content-item flx-section__title flx-section__title--abo tr tr-stag">
					{{{usp.title}}}
				</h3>
			</div>
		</div>
	</div>
</div>

<!-- stories -->
<div class="flx-section" id="flx-s1">
	<div class="flx-stories tr tr-500 tr--fade-in">
		<div class="flx-stories__gradient"></div>
		<div class="container ovr-container">
			<div class="flx-stories__container">
				<div class="flx-stories__loader tr tr-stag">
					{{#each stories.line}}
					<div class="flx-stories__loader-line">
						<div class="flx-stories__loader-line__bg"></div>
						<div class="flx-stories__loader-line__loading"></div>
					</div>
					{{/each}}
				</div>
				<h3 class="flx-stories__caption tr tr-stag">
					{{{stories.heading}}}
				</h3>
				<div class="flx-stories__caption tr tr-stag">
					<!--
					<div class="flx-stories__month">
						<span include="../assets/img/icons/calendar--small.svg"></span>
						{{stories.caption.month}}
					</div>
					-->
					<h3 class="flx-stories__title">{{{stories.caption.title}}}</h3>
					<!-- <p class="no-margin">{{stories.caption.description}}</p> -->
				</div>
			</div>
		</div>
	</div>
</div>

<!-- overview -->
<div class="flx-section" id="flx-s2">
	<div class="flx-section__container flx-bg--white">
		<div class="container ovr-container">
			<div class="flx-grid flx-grid--1-1 flx-grid--align-center">
				<div class="flx-section__img flx-section__img--100 tr tr-500 tr--scale-in flx-grid__reverse">
					<img src="../media/{{overview.img}}" class="img-responsive" />
				</div>		
				<div class="flx-section__content">
					<h3 class="flx-section__content-item flx-section__title flx-section__title--abo tr tr-stag">
						{{{overview.title}}}
					</h3>
					<p class="flx-section__content-item flx-section__description tr tr-stag">
						{{{overview.description}}}
					</p>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- summary -->
<div class="flx-section" id="flx-s3">
	<div class="flx-section__container flx-section__container--small flx-gradient--grey">
		<div class="container ovr-container">
			<div class="flx-summary">
				{{#each summary}}
				<div class="flx-summary__item tr tr-stag">
					<div class="flx-summary__icon" include="../media/{{icon}}.svg"></div>
					<h3 class="flx-summary__title">{{{title}}}</h3>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>

<!-- call to action -->
<div class="flx-section" id="flx-s4">
	<div class="flx-section__container flx-section__container--small flx-gradient--yellow">
		<div class="container ovr-container">
			<div class="flx-section__content flx-section__content--center">
				<h3 class="flx-section__title tr tr-stag"><b>{{{cta.heading}}}</b></h3>
				<p class="flx-section__description tr tr-stag">{{{cta.description}}}</p>
				<div class="tr tr-stag">
					<button class="button flx-button--blue">
						{{button-cta}}
					</button>
				</div>
			</div>
		</div>
	</div>
</div>

<!-- faq -->
<div class="flx-section" id="flx-s5">
	<div class="flx-section__container flx-faq">
		<div class="container ovr-container">
			<div class="flx-section__content">
				<div class="flx-faq__text">
					<h3 class="flx-section__title flx-section__title--abo tr tr-stag">
						{{faq.heading}}
					</h3>
					<p class="flx-section__description tr tr-stag">
						{{{faq.description}}}
					</p>
				</div>
				<ul class="list collapsibleList is-collapsible">
					{{#each faq.questions}}
					<li class="collapsibleList__item ovr-collapsibleList__item tr tr-stag">
						<h3 class="collapsibleList__header" id="keuzedagen" tabindex="0" aria-expanded="false" role="button">{{{question}}}</h3>   
					</li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
</div>

<!-- ros abonnementen -->
<div class="flx-section" id="flx-s6">
	<div class="flx-section__container flx-section__container--small flx-gradient--grey">
		<div class="container ovr-container">
			<div class="flx-section__content">
				<h3 class="flx-section__title flx-section__title--abo flx-section__title--more-margin tr tr-stag">
					{{{ros.heading}}}
				</h3>
				<div class="tr tr-stag">
					{{#each ros.adds}}
					<div class="flx-ros__adds js-ros">
						<div class="flx-ros__acc">
							<h3 class="flx-ros__heading js-ros-heading">{{category}}</h3>
							<span class="flx-ros__icon flx-ros__icon--acc js-ros-icon" include="../assets/img/icons/plus--small.svg"></span>
						</div>
						<!-- abonnementen container -->
						<div class="ros-content {{class}} js-ros-content" include="../components/{{component}}.html"></div>
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</div>